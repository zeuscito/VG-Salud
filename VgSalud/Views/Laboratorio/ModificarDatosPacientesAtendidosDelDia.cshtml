
@model VgSalud.Models.E_CSLaboratorio


@{
    ViewBag.Title = "ModificarDatosPacientesAtendidosDelDia";
    //var lista = (List<VgSalud.Models.E_CSLaboratorio>)ViewBag.lista;

    bool MuestraH = (bool)ViewBag.MuestraH;
    bool MuestraS = (bool)ViewBag.MuestraS;

    string RPR = (string)ViewBag.RPR;
    string Parasitologico = (string)ViewBag.Parasitologico;
    string Observacion = (string)ViewBag.Observacion;

    string Apto = (string)ViewBag.Apto;
    

    string check = "checked";

}


<div class="content-wrapper">
    <section class="content-header">
        <h1> Laboratorio</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-flask"></i>Laboratorio</a></li>
            <li class="active">Actualizar Datos</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div style="float:left;margin-top:1%;margin-left:1%;">
                            <a href="./ListaPacientesAtendidosDelDia">
                                <center><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                            </a>
                        </div>
                    </div>

                    <fieldset>
                        <div class="box-body">
                            <form method="post">
                                <fieldset>
                                    <legend style="margin-left:3%;width:96%;">Datos</legend>
                                    @*@foreach (var item in lista)
                                    {*@
                                        <input type="hidden" name="Procedencia" id="Procedencia" value="@Model.Procedencia" />
                                        <input type="hidden" name="Manipulador" id="Manipulador" value="@Model.Manipulador" />
                                        <input type="hidden" name="hiddenFechaAtencion" id="hiddenFechaAtencion" value="@Model.FechaAtencion" />
                                        <div class="row">
                                            <div class="col-xs-12 ">
                                                <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label>Paciente: </label>
                                                        </div>
                                                        <div class="col-md-9">
                                                            <label style="font-size:large;color:coral;">@Model.Paciente</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12 col-sm-5 ">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label>Edad: </label>
                                                        </div>
                                                        <div class="col-md-9">
                                                            <label style="font-size:large;color:coral;">@Model.Edad</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 ">
                                                <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label>Tipo Carnet: </label>
                                                        </div>
                                                        <div class="col-md-9">
                                                            <label style="font-size:large;color:coral;">@Model.DesTipoCarnet</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-12 col-sm-5 ">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label>Manipulador: </label>
                                                        </div>
                                                        <div class="col-md-9">
                                                            <label style="font-size:large;color:coral;">@Model.Manipulador</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 ">
                                                <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label>Nro. Carnet: </label>
                                                        </div>
                                                        <div class="col-md-9">
                                                            <label style="font-size:large;color:coral;">@Model.NumeroCarnet</label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    @*}*@

                                </fieldset>

                                <fieldset>
                                    <legend style="margin-left:3%;width:96%;">Entrega Muestras</legend>
                                    <div class="row" style="text-align:center;">
                                        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                                            <div class="form-group">
                                                <div class="col-md-6">
                                                    <div class="checkbox" id="checkboxMuestraSangre">
                                                        <label style="font-size:large"><input type="checkbox" value="@MuestraS" @if (MuestraS == true) { @check; } style="width:15px;height:15px;" name="MuestraS" id="MuestraS" disabled> Muestra de Sangre</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="checkbox" id="checkboxMuestraHeces">
                                                        <label style="font-size:large"><input type="checkbox" value="@MuestraH" @if (MuestraH == true) { @check; } style="width:15px;height:15px;" name="MuestraH" id="MuestraH" disabled> Muestra de Heces  </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>

                                <fieldset>
                                    <legend style="margin-left:3%;width:96%;"> Resultados</legend>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                            <div class="form-group" id="IdHIV">
                                                <div class="col-md-3">
                                                    <label>HIV: </label>
                                                </div>
                                                <div class="col-md-9">
                                                    <textarea class="form-control" name="HIV" style="height:70px;"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 ">
                                            <div class="form-group" id="IdGrupoFactor">
                                                <div class="col-md-3">
                                                    <label>Grupo Factor: </label>
                                                </div>
                                                <div class="col-md-9">
                                                    <textarea class="form-control" name="GrupoFactor" style="height:70px;"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                            <div class="form-group" id="IdRPR">
                                                <div class="col-md-3">
                                                    <label>RPR: </label>
                                                </div>
                                                <div class="col-md-9">
                                                    <textarea class="form-control" name="RPR"  style="height:70px;">@Model.RPR</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 ">
                                            <div class="form-group" id="IdParasitologico">
                                                <div class="col-md-3">
                                                    <label>Parasitologico: </label>
                                                </div>
                                                <div class="col-md-9">
                                                    <textarea class="form-control" name="Parasitologico" style="height:70px;">@Model.Parasitologico</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-5 col-sm-offset-1">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label>Observacion: </label>
                                                </div>
                                                <div class="col-sm-9">
                                                    <textarea class="form-control" name="Observacion" style="height:70px;">@Model.Observacion</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 ">
                                            <div class="form-group">
                                                <div class="col-sm-6 col-sm-offset-6">
                                                    <div class="checkbox" id="IdCheckBoxReevaluado" style="display:none;">
                                                        <input type="hidden" id="hiddenReev" name="Reevaluado" />
                                                        <label style="font-size:large;margin-top:3%;"><input type="checkbox" value="0" style="width:15px;height:15px;" id="IdReevaluado" class="Reevaluado"> Reevaluado</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6">
                                            <div class="form-group" style="margin-top:2%;text-align:center;">
                                                <input type="hidden" value="@Apto" id="hiddenAptoLab" />
                                                <div class="col-sm-3 col-sm-offset-5">
                                                    <div class="radio">
                                                        <label style="font-size:large"><input type="radio" @if (Apto == "SI") { @check; } value="SI" style="width:15px;height:15px;" name="Apto"> APTO</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="radio">
                                                        <label style="font-size:large"><input type="radio" @if (Apto == "NO") { @check; } value="NO" style="width:15px;height:15px;" name="Apto"> NO APTO</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xs-12" style="text-align:center;margin-top:2%;margin-bottom:2%;">
                                            <input  type="hidden" value="@Model.Id" name="Id" id="Id"/>
                                            <button type="submit" title="Modificar Datos" id="btnModificarLab" class="btn btn-success" style="background-color:#13D003;border:0px;font-size:large;"><i class="fa fa-floppy-o"></i> Modificar</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </form>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {

        debugger;
        var FechaAtecion = $('#hiddenFechaAtencion').val();

        var Fecha = new Date();
        var dd = Fecha.getDate();
        var mm = Fecha.getMonth() + 1; //hoy es 0!
        var yyyy = Fecha.getFullYear();
        var FechaSystem = "";
        if (mm < 10) {
            FechaSystem = dd + "/0" + mm + "/" + yyyy;
        }
        else {
            FechaSystem = dd + "/" + mm + "/" + yyyy;
        }

        if (FechaAtecion == FechaSystem) {
            $('#IdCheckBoxReevaluado').show();
            $('.Reevaluado').prop('checked', false);
            $('#hiddenReev').val('NO');
        }
        else {
            debugger;
            $('#IdCheckBoxReevaluado').show();
            alert(1);
            $('.Reevaluado').prop('checked', true);
            alert(2);
            $('#hiddenReev').val('SI');
            alert(3);
            $('#IdReevaluado').addClass('disabled');
            alert(4);
            //$('.Reevaluado').addClass('disabled');
        }

        //$('#hiddenAptoLab').val();
        var DatoApto = $('#hiddenAptoLab').val();

        if (DatoApto=='SI') {
            $('#btnModificarLab').hide();
            $('#IdCheckBoxReevaluado').hide();
        }
        else if (DatoApto == 'NO') {
            $('#btnModificarLab').show();
        }

        $(".Reevaluado").click(function () {
            debugger;
            if ($(".Reevaluado").is(':checked')) {
                $('#hiddenReev').val('SI');
            } else {
                $('#hiddenReev').val('');
            }
        });

        //validacion para mostrar los checksbox requeridos
        ValidarChecksBoxMuestra();

        //validamos los campos a actualizar por procedencia
        ValidarCamposPorProcedencia();

    });


    function ValidarChecksBoxMuestra() {
        var procedencia = $('#Procedencia').val();
        var manipulador = $('#Manipulador').val();

        if (procedencia == '1' && manipulador == 'SI' || manipulador == 'si' || manipulador == 'Si' || manipulador == 'sI') {
            $('#checkboxMuestraSangre').show();
            $('#checkboxMuestraHeces').show();
        }
        else
            if (procedencia == '1' && manipulador == 'NO' || manipulador == 'no' || manipulador == 'No' || manipulador == 'nO') {
                $('#checkboxMuestraHeces').hide();
            }
            else
                if (procedencia == '2') {
                    $('#checkboxMuestraSangre').show();
                    $('#checkboxMuestraHeces').hide();
                }
    }


    function ValidarCamposPorProcedencia() {
        var procedencia = $('#Procedencia').val();
        var manipulador = $('#Manipulador').val();


        if (procedencia == '1' && manipulador == 'SI' || manipulador == 'si' || manipulador == 'Si' || manipulador == 'sI') {
            $('#IdRPR').show();
            $('#IdParasitologico').show();

            $('#IdHIV').hide();
            $('#IdGrupoFactor').hide();
        }
        else
            if (procedencia == '1' && manipulador == 'NO' || manipulador == 'no' || manipulador == 'No' || manipulador == 'nO') {
                $('#IdRPR').show();
                $('#IdParasitologico').hide();

                $('#IdHIV').hide();
                $('#IdGrupoFactor').hide();
            }
            else
                if (procedencia == '2') {
                    $('#IdHIV').show();
                    $('#IdGrupoFactor').show();
                    $('#IdRPR').show();

                    $('#IdParasitologico').hide();

                }


    }

</script>

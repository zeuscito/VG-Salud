@model VgSalud.Models.E_CSOdontologia

@{
    var ListaAtendidos = (List<VgSalud.Models.E_CSOdontologia>)ViewBag.Lista;
    var NumeroAtendido = 0;
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Odontologia</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-address-card-o"></i>Carnet Sanitario</a></li>
            <li class="active">Lista Pacientes Atendidos en el Dia</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <fieldset>
                        <legend style="margin-left:3%;width:96%">Lista Pacientes Atendidos en el Dia</legend>

                        <div class="box-body">
                            <div class="col-md-12 " style="padding-left:44px;padding-right: 115px;">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">
                                            <th width="5%" style="text-align:center">Nro. Atendido</th>
                                            <th width="10%" style="text-align:center">Cod. Cue.</th>
                                            <th width="40%" style="text-align:center">Paciente</th>
                                            <th width="10%" style="text-align:center">TipoCarnet</th>
                                            <th width="10%" style="text-align:center">Manipulador</th>
                                            <th width="10%" style="text-align:center">Edad</th>
                                            <th width="10%" style="text-align:center"><i class="fa fa-pencil-square-o"></i></th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item in ListaAtendidos)
                                        {
                                            NumeroAtendido++;
                                            <tr>
                                                <td style="text-align:center">@NumeroAtendido</td>
                                                <td style="text-align:center">@item.CodCue</td>
                                                <td>@Html.DisplayFor(modelItem => item.Paciente)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DesTipoCarnet)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Manipulador)</td>
                                                <td style="text-align:center">@item.Edad</td>
                                                <td style="text-align:center"><a title="Actualizar" class="btn btn-info" href="ActualizarDatosAtencionOdontologia?id=@item.Id" action='@Url.Action("ActualizarDatosAtencionOdontologia", "Odontologia")'><i class="fa fa-pencil-square-o"></i> Actualizar</a></td>


                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </section>

</div>

<script>

    $(document).ready(function () {

    });

</script>

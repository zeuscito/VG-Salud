@model IEnumerable<VgSalud.Models.E_Historia_Carnet>

@{
    ViewBag.Title = "HistorialCarnet";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();

    string CodUsu = Session["UserID"].ToString();
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Carnet Sanitario</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-address-card-o"></i>Carnet Sanitario</a></li>
            <li class="active">Historial</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">

                    <div class="box-header">

                        <div style="float:left; padding:0% 1% 0 1%">
                            <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                            <br />
                        </div>



                    </div>
                    <br />



                    @using (Html.BeginForm())
                    {

                        <fieldset>
                            <legend style="margin-left:3%; width:96%">Filtro</legend>
                            <div class="box-body">
                                <div class="col-md-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>NOMBRE o APELLIDO:</label>
                                            </div>
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" name="Nombre" placeholder="Ingrese Nombre" value="@ViewBag.Nombre" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>DNI:</label>
                                            </div>
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" name="Dni" placeholder="Ingrese Dni" value="@ViewBag.Dni" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-2" style="margin-top:1%">
                                        <div class="form-group">
                                            <center>
                                                <input style="background-color:#1d2e74; border:#1d2e74;margin-top: 11px;" type="submit" value="Consultar" class="btn btn-danger" />
                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                    }

                    <br />

                    <fieldset>


                        <legend style="margin-left:3%; width:96%">HISTORIAL</legend>

                        <div class="box-body">

                            <div class="col-md-12" style="padding-left:44px;padding-right: 115px;">

                                <table id="example1" class="table table-bordered table-striped">

                                    <thead>
                                        <tr class="headTabla">
                                            <th width="10%" style="text-align:center">Carnet</th>
                                            <th width="10%;" style="text-align:center">Nombre</th>
                                            <th width="10%" style="text-align:center">Doc. Identidad</th>
                                            <th width="10%" style="text-align:center">Fecha Registro</th>
                                            <th width="10%" style="text-align:center">Fecha Recojo.</th>
                                            <th width="10%" style="text-align:center">Fecha Vencimiento</th>
                                            <th width="10%" style="text-align:center">Estado</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.Carnet)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.ApePat) &nbsp;@Html.DisplayFor(modelItem => item.ApeMat) <br />@Html.DisplayFor(modelItem => item.NomPac)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.NumDoc)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.FecRecojo)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.FecVencimiento)</td>
                                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.EstadoCarnet)</td>

                                            </tr>

                                        }

                                    </tbody>

                                </table>
                            </div>

                        </div>

                    </fieldset>
                </div>
            </div>
        </div>
    </section>

</div>
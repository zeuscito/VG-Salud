@model IEnumerable<VgSalud.Models.E_Datos_Generales>

@{
    ViewBag.Title = "ListarDatosGenerales";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Datos Generales</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Datos Generales</a></li>
            <li class="active">Datos Generales</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-h<aeader">

                    </div>
                    <br />
                    <div class="box-header">
                        <div style="float:left; padding:0% 1% 0 1%">
                            <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                            <br />
                        </div>
                    </div>
                    <div class="box-body">
                        <fieldset>
                            <legenda style="margin-left: 50px;">Lista</legenda>
                            <div class="col-md-12" style="margin-left: 35px;padding-right: 85px">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">

                                            <th>IGV</th>
                                            <th>TIPO DE CAMBIO</th>
                                            <th>MOSTRAR ANTECEDENTES PACIENTE</th>
                                            <th>ATENDER CUENTAS FACT.</th>
                                            <th>MENSAJE DE ATENCIONES PROGRAMADAS</th>
                                            <th>MENSAJE DE ATENCIONES NO PROGRAMADAS</th>
                                            <th>GENERAR CTA AUTOMATICA</th>
                                            <th>MOSTRAR PACIENTE EN TICKET</th>
                                            <th>DISTRITO DEFAULT</th>
                                            <th><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.igv)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Tipo_Cambio)</td>
                                                <td>@Html.DisplayFor(modelItem => item.MUESTRA_ANTECEDENTE)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ATENCIONESPAGADAS)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PREGXATENCIONPROGRAMADAS)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PREGXATENCIONNOPROGRAMADAS)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GENERARCUENTAAUTO)</td>
                                                <td>@Html.DisplayFor(modelItem => item.MOSTRARPACIENTETICKET)</td>
                                                <td>@ViewBag.distrito</td>
                                                <td>
                                                    <div class="tools">
                                                        @{

                                                            var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarDatos.cshtml");
                                                            if (abc1 != null)
                                                            {
                                                                <a title="Editar" href="ModificarDatos?igv=@item.igv&tipo=@item.Tipo_Cambio"><i class="fa fa-edit"></i></a>
                                                            }

                                                        }
                                                    </div>
                                                </td>
                                     
                                            </tr>

                                                            }

                                    </tbody>

                                </table>
                            </div>
                        </fieldset>


                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>

<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        else if (presiono1 && (e.keyCode == 112)) {
            $(location).attr("href", "../Master/Index");
        }
    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>
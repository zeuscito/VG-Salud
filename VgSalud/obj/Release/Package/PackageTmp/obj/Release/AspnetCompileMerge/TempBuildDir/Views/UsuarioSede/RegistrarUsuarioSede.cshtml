@model VgSalud.Models.E_Usuario_Sede

@{
    ViewBag.Title = "RegistrarUsuarioSede";
    var listausuario = (SelectList)ViewBag.listaUsuario;
    var listasedes = (SelectList)ViewBag.listaSedes; 
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario Sede</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario Sede</a></li>
            <li class="active">Registrar Usuario Sede</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Registrar Usuario Sede</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Usuario</label>
                            </div>
                            <div class="col-md-9">

                                @Html.DropDownList("CodUsu",listausuario, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodUsu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Sedes</label>
                            </div>
                            <div class="col-md-9">

                                @Html.DropDownList("CodSede",listasedes, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodSede, "", new { @class = "text-danger" })
                            </div>
                        </div>
                     


                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger">Registar</button>
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Çancelar</a>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>
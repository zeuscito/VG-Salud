@model IEnumerable<VgSalud.Models.E_Perfil>

@{
    ViewBag.Title = "ListaPerfil";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}




<div class="content-wrapper">
    <section class="content-header">
        <h1>Perfil</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Perfil</a></li>
            <li class="active">Consultar Perfil</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistraPerfil.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">
                                <a href="~/Perfil/RegistraPerfil" class="btn btn-danger">Registrar Nuevo Perfil &nbsp<i class="fa fa-plus-square pull-right" aria-hidden="true"></i></a>
                            </div>
                            <br />
                        }

                    }

                    
                    <div class="box-header">
                        <h3 class="box-title">Lista de Perfil</h3>
                    </div>
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                   
                                    <th>Descripcion</th>
                                    <th>Estado</th>
                                  
                                    <th><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {

                                    <tr>
                                       
                                        <td>@Html.DisplayFor(modelItem => item.descPerf)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EstperF)</td>
                                        


                                        <td>
                                            <div class="tools">

                                                @{

                                                    var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarPerfil.cshtml");
                                                    if (abc2 != null)
                                                    {
                                                        <a title="Editar" href="ModificarPerfil/@item.codperf"><i class="fa fa-edit"></i></a>
                                                    }

                                                    var abc3 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "EliminarPerfil.cshtml");
                                                    if (abc3 != null)
                                                    {
                                                        if (item.EstperF == true)
                                                        {
                                                            <a title="Eliminar" href="Eliminar/@item.codperf"><i class="fa fa-trash-o"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a title="Activar" href="Activar/@item.codperf"><i class="fa fa-plus-square"></i></a>
                                                        }
                                                    }

                                                }


                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>

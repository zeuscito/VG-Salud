@model IEnumerable<VgSalud.Models.E_Datos_Generales>

@{
    ViewBag.Title = "ListarDatosGenerales";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Datos Generales</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Datos Generales</a></li>
            <li class="active">Datos Generales</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-h<aeader">
                    
                    </div>
                    <br />
                    <div class="box-header">
                        <h3 class="box-title">Lista de Datos Generales</h3>
                    </div>
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>IGV</th>
                                    <th>TIPO DE CAMBIO</th>

                                    <th><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>

                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.igv)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Tipo_Cambio)</td>


                                        <td>
                                            <div class="tools">
                                                @{

                                                    var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarDatos.cshtml");
                                                    if (abc1 != null)
                                                    {
                                                        <a title="Editar" href="ModificarDatos/?igv=@item.igv&tipo=@item.Tipo_Cambio"><i class="fa fa-edit"></i></a>
                                                    }

                                                }
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>
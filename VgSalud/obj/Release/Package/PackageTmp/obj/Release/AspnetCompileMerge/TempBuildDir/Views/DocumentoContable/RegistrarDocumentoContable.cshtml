@model VgSalud.Models.E_DocumentoContable

@{
    ViewBag.Title = "RegistrarDocumentoContable";
}




<div class="content-wrapper">
    <section class="content-header">
        <h1>Documento Contable</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Rol</a></li>
            <li class="active">Registrar Documento Contable</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Datos del Documento Contable</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Descripcion</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DescCodDoc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DescCodDoc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Alias</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.AliasCodDoc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AliasCodDoc, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <div class="col-md-6">



                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Estado</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.EstCodDoc, htmlAttributes: new { @checked = true })

                                @Html.ValidationMessageFor(model => model.EstCodDoc, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <input type="hidden" name="Crea" value="@ViewBag.crear" />

                        <label></label>
                        <div class="form-group">
                            <div class="col-md-12">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger">Registrar</button>
                                    <a value="Cancelar" href="~/EmpresaTercero/ListaEmpresaTercero" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </section>
</div>
























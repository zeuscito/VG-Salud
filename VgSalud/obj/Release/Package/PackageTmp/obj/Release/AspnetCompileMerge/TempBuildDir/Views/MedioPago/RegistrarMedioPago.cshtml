@model VgSalud.Models.E_Medios_Pago

@{
    ViewBag.Title = "RegistrarMedioPago";
}



<div class="content-wrapper">
    <section class="content-header">
        <h1>Medios Pago</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Medios Pago</a></li>
            <li class="active">Medios Pago</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Medios Pago</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Descripcion</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control", @id = "DniUsu" } })
                                @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Descripcion</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.ESTADO, new { @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.ESTADO, "", new { @class = "text-danger" })
                            </div>
                        </div>
                      


                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Registrar" class="btn btn-danger">Registrar</button>
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>




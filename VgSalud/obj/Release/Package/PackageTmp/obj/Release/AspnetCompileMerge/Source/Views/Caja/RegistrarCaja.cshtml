        {
            <Text>
        $('#myModal2').modal('show');
        </text>
        }

        @if (ViewBag.tc != "")
        {
            <Text>
        $('#tipoCambio').val("@ViewBag.tc");
        $('#montoCambioR').val("@ViewBag.tc");
        $('#montoCambio').val("@ViewBag.tc");
        </text>

@model IEnumerable<VgSalud.Models.E_Consultorio>

@{
    ViewBag.Title = "ListaConsultorio";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Consultorio</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Consultorio</a></li>
            <li class="active">Consultar Consultorio</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">

                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarConsultorio.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">
                                <a href="~/Consultorio/RegistrarConsultorio" class="btn btn-danger">Registrar nuevo Consultorio &nbsp<i class="fa fa-plus-square pull-right" aria-hidden="true"></i></a>
                            </div>
                        }

                    }

                    
                    <br />
                    <div class="box-header">
                        <h3 class="box-title">Lista de Consultorios</h3>
                    </div>
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Consultorio</th>
                                    <th>Servicio</th>
                                    <th>Mixto</th>
                                    <th>Estado</th>
                                    <th><i class="fa fa-edit"></i></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.IdConsul)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DescConsul)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NomServ)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Mixto)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EstConsul)</td>
                                        
                                        <td>
                                            <div class="tools">
                                                @{

                                                    var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarConsultorio.cshtml");
                                                    if (abc2 != null)
                                                    {
                                                        <a title="Editar" href="ModificarConsultorio/@item.IdConsul"><i class="fa fa-edit"></i></a>
                                                    }

                                                }
                                                
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>















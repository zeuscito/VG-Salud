@model VgSalud.Models.E_UsuarioDocumentoSerie

@{
    ViewBag.Title = "RegistrarUsuarioDocSerie";
    var usuario = (SelectList)ViewBag.usuario;
    var serie = (SelectList)ViewBag.serie;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario Documento Serie</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario Documento Serie</a></li>
            <li class="active">Registrar Usuario Documento Serie</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Registrar Usuario Documento Serie</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Usuario</label>
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownList("CodUsu", usuario, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodUsu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Serie</label>
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownList("CodDocSerie", serie, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodDocSerie, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Prioridad</label>
                            </div>
                            <div class="col-md-9">

                                @Html.CheckBoxFor(model => model.Prioridad)
                                @Html.ValidationMessageFor(model => model.Prioridad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Estado</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.EstUDs, new { @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.EstUDs, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Registrar" class="btn btn-danger">Modificar</button>
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>
@model VgSalud.Models.E_Consultorio

@{
    ViewBag.Title = "ModificarConsultorio";
    var ListaServicios = (SelectList)ViewBag.ListaServicios;
}





<div class="content-wrapper">
    <section class="content-header">
        <h1>Consultorio</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Consultorio</a></li>
            <li class="active">Modificar Consultorio</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Modificar Consultorio</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <input type="hidden" name="IdConsul" id="IdConsul" value="@Model.IdConsul" />


                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Consultorio</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DescConsul, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DescConsul, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Servicios</label>
                            </div>
                            <div class="col-md-9">
                              
                                @Html.DropDownList("CodServ", ListaServicios, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodSede, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <label>Mixto</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Mixto)

                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-md-6">


                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <label>Estado</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.EstConsul)
                                    @Html.ValidationMessageFor(model => model.EstConsul, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>

                       



                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">

                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger">Modificar</button> 
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>

                                </center>
                            </div>
                        </div>

                        @*<div class="col-md-3">
                            <div class="form-group">

                                <center>
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>*@
                    </div>
                </div>
            </form>

        </div>
    </section>
</div>




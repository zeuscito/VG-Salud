@model VgSalud.Models.E_Caja

@{
    ViewBag.Title = "FacturacionXSede";
    var listado = (List<VgSalud.Models.E_Caja>)ViewBag.listado;
    var ListaSede = (SelectList)ViewBag.ListaSede;
    var ListaDoc = (SelectList)ViewBag.ListaDoc;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Reportes</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Reportes</a></li>
            <li class="active">Reportes de facturacion por sede</li>
        </ol>
    </section>
    <section class="content">

        <div class="box box-default">

            <div class="box-header with-border">
                <h3 class="box-title">Generar Reporte de facturacion por sede</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            @using (Html.BeginForm())
            {

                <fieldset>
                    <div class="box-body">
                        <div class="col-md-12">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Sede</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("CodSede", ListaSede, "[NO SELECCIONADO]", new { @class = "form-control select2", @id = "CodSede", @readonly= true })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Documento Contable</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("CodDoc", ListaDoc, "[NO SELECCIONADO]", new { @class = "form-control select2", @id = "CodDoc", @readonly = true })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Serie</label>
                                    </div>
                                    <div class="col-md-9">
                                        <select class="form-control select2" id="serie" name="serie">

                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Fecha Inicio</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" name="FechaI" value="@ViewBag.FechaInicio" maxlength="10" class="form-control  datepicker" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Fecha Final</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" name="FechaF" value="@ViewBag.FechaFinal" maxlength="10" class="form-control  datepicker" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Hora Inicio</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="bootstrap-timepicker">
                                            <div class="input-group">
                                                <input type="text" id="HoraI" name="HoraI" value="@ViewBag.HoraInicio" class="form-control timepicker">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Hora Final</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="bootstrap-timepicker">
                                            <div class="input-group">
                                                <input type="text" id="HoraF" name="HoraF" value="@ViewBag.HoraFinal" class="form-control timepicker">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12" style="margin-top:2%">
                                <div class="form-group">
                                    <center>
                                        <input type="submit" value="Consultar" class="btn btn-danger" />
                                    </center>
                                </div>
                            </div>

                        </div>
                    </div>
                </fieldset>

            }

            <br /><br /><br />

            @if (listado != null)
            {

                <div class="box-body">
                    <table id="example3" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Cod. Doc.</th>
                                <th>Serie</th>
                                <th>Secuencia</th>
                                <th>Nombre Paciente</th>
                                <th>Documento</th>
                                <th>Total</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item1 in listado)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item1.CodCaja)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.AliasCodDoc)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.Serie)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.NumDoc)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.RazonSocial)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.Ruc)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.Total)</td>
                                    <td>@Html.DisplayFor(modelItem => item1.Estado)</td>
                                </tr>

                            }

                        </tbody>

                    </table>
                </div>
                            <h4 style="padding:2%">
                                Exportar:
                                <a href="~/Reportes/GeneraFacturacionXSede/?id=PDF&CodSede=@ViewBag.CodSede&CodDoc=@ViewBag.CodDoc&serie=@ViewBag.Serie&FechaI=@ViewBag.FechaInicio&FechaF=@ViewBag.FechaFinal&HoraI=@ViewBag.HoraInicio&HoraF=@ViewBag.HoraFinal" target="_blank"><i class="fa fa-file-pdf-o"></i></a> |
                                <a href="~/Reportes/GeneraFacturacionXSede/?id=Word&CodSede=@ViewBag.CodSede&CodDoc=@ViewBag.CodDoc&serie=@ViewBag.Serie&FechaI=@ViewBag.FechaInicio&FechaF=@ViewBag.FechaFinal&HoraI=@ViewBag.HoraInicio&HoraF=@ViewBag.HoraFinal" target="_blank"><i class="fa fa-file-word-o"></i></a> |
                                <a href="~/Reportes/GeneraFacturacionXSede/?id=Excel&CodSede=@ViewBag.CodSede&CodDoc=@ViewBag.CodDoc&serie=@ViewBag.Serie&FechaI=@ViewBag.FechaInicio&FechaF=@ViewBag.FechaFinal&HoraI=@ViewBag.HoraInicio&HoraF=@ViewBag.HoraFinal" target="_blank"><i class="fa fa-file-excel-o"></i></a>
                            </h4>
            }

        </div>
        <br /><br /><br />



    </section>
    }
</div>


<script>

    $(document).ready(function () {

        $('#CodSede option[value=@ViewBag.CodSede]').prop('selected', 'selected').change();

        var serieA = "@ViewBag.Serie";

        var codDoc = $("select#CodDoc").val();
        $.get('@Url.Action("ObtenerSerie", "Citas")', {
                CodDoc: codDoc
            }, function (response) {

                var select = $('#serie');
                select.find('option').remove();
                $('<option>').val("T").text("[TODOS]").appendTo(select);
                $.each(response, function (index, value) {
                    $('<option>').val(value.Serie).text(value.Serie).appendTo(select);
                    if (value.Serie == serieA) {
                        $('#serie option[value="' + value.Serie + '"]').attr('selected', true);
                        $("#select2-serie-container").text(value.Serie);
                    }
            });
        });


        $('#CodDoc').change(function (event) {
            var codDoc = $("select#CodDoc").val();
            $.get('@Url.Action("ObtenerSerie", "Reportes")', {
                CodDoc: codDoc
            }, function (response) {

                $('#select2-serie-container').empty();
                var select = $('#serie');
                select.find('option').remove();
                $('<option>').val("T").text("[TODOS]").appendTo(select);
                $.each(response, function (index, value) {
                    $('<option>').val(value.Serie).text(value.Serie).appendTo(select);
                });
            });
        });


    });

</script>

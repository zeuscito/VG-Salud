@model VgSalud.Models.E_Consultorio

@{
    ViewBag.Title = "RegistrarConsultorio";
    var ListaServicios = (SelectList)ViewBag.ListaServicios;
}




<div class="content-wrapper">
    <section class="content-header">
        <h1>Consultorio</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Consultorio</a></li>
            <li class="active">Registrar Consultorio</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Registrar Consultorio</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @*<div class="form-group">
                                <div class="col-md-3">
                                    <label>Código</label>
                                </div>
                                <div class="col-md-9">
                                   @Html.EditorFor(model => model.CodEspec, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodEspec, "", new { @class = "text-danger" })
                                </div>
                            </div>*@


                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Consultorio</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DescConsul, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DescConsul, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       <div class="form-group">
                            <div class="col-md-3">
                                <label>Servicios</label>
                            </div>
                            <div class="col-md-9">
                               @* @Html.EditorFor(model => model.CodSede, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.DropDownList("CodServ", ListaServicios, "[NO SELECCIONADO]", new { @class = "form-control select2", @id= "CodServ" })
                                @Html.ValidationMessageFor(model => model.CodSede, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <label>Mixto</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Mixto)
                                   
                                </div>
                            </div>
                        </div>



                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <label>Estado</label>
                                </div>
                                <div class="col-md-9">
                                
                                    <input type="checkbox" name="EstConsul" id="EstConsul" value="" checked />

                                </div>
                            </div>
                        </div>

                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">

                                <center>
                                    <button type="submit" value="Registrar" class="btn btn-danger">Registrar</button> 
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>

                                </center>
                            </div>
                        </div>

                        @*<div class="col-md-3">
                            <div class="form-group">

                                <center>
                                    <a href="#" onclick="history.back();return false" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>*@
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>


@model IEnumerable<VgSalud.Models.E_Usuario_Sede>

@{
    ViewBag.Title = "ListarUsuarioSede";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario / Sede</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario Sede</a></li>
            <li class="active">Usuario Sede</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">

                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarUsuarioSede.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Master/Index"><center><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                                    <br />
                                </div>

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/UsuarioSede/RegistrarUsuarioSede"><center><i class="fa fa-plus-circle" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Nuevo</strong></center></a>
                                </div>
                            </div>
                            <br />
                        }

                    }

                    <div class="box-body">
                        <fieldset>
                            <legend style="margin-left: 19px;">Lista</legend>
                            <div class="col-md-12">
                                <table id="" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">

                                            <th>Usuario</th>
                                            <th>Sede</th>

                                            <th><i class="fa fa-trash-o"></i></th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NombreSede)</td>


                                                <td>
                                                    <div class="tools">

                                                        @{

                                                            var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "EliminarUsuarioSede.cshtml");
                                                            if (abc2 != null)
                                                            {
                                                                <a title="Eliminar" href="Eliminar/?id=@item.CodUsu&id1=@item.CodSede"><i class="fa fa-trash-o"></i></a>
                                                            }

                                                        }

                                                    </div>
                                                </td>
                                            </tr>

                                                            }

                                    </tbody>

                                </table>
                            </div>
                        </fieldset>
                      
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>

<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        else if (presiono1 && (e.keyCode == 116)) {
            $(location).attr("href", "RegistrarUsuarioSede");
        }

        else if (presiono1 && (e.keyCode == 112)) {
            $(location).attr("href", "../Master/Index");
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });
</script>


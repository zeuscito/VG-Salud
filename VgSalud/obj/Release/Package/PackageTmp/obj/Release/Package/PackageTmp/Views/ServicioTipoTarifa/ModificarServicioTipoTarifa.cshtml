@model VgSalud.Models.E_Servicio_TipoTarifa

@{
    ViewBag.Title = "ModificarServicioTipoTarifa";
    var tipotarifa = (SelectList)ViewBag.tipotarifa;
    var servicio = (SelectList)ViewBag.servicio;
}



<div class="content-wrapper">
    <section class="content-header">
        <h1>Servicio / Tipo Tarifa</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Servicio / Tipo Tarifa</a></li>
            <li class="active">Modificar Servicio Tipo Tarifa</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="ListarServiciosTipoTarifas">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>

                </div>

                <div class="box-body">

                    <fieldset>
                        <legend style="margin-left: 29px;">Modificar</legend>
                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Medico</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodtipoTar", tipotarifa, "[NO SELECCIONADO]", new { @class = "form-control select2", @disabled = true })
                                    @Html.ValidationMessageFor(model => model.CodtipoTar, "", new { @class = "text-danger" })
                                    <input type="hidden" name="CodtipoTar" value="@Model.CodtipoTar" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Servicio</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodServ", servicio, "[NO SELECCIONADO]", new { @class = "form-control select2", @disabled = true })
                                    @Html.ValidationMessageFor(model => model.codserv, "", new { @class = "text-danger" })
                                    <input type="hidden" name="CodServ" value="@Model.codserv" />
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Porcentaje</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.porcentaje, "", new { @class = "text-danger" })
                                </div>
                            </div>



                        </div>
                    </fieldset>

                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003; border:0" id="modificar">Modificar</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </section>
</div>

<script>

    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if ((presiono1 == true) && (e.keyCode == 123)) {
            $("#modificar").click();
        }
        else if (presiono1 && (e.keyCode == 67)) {
            $(location).attr("href", "ListarServiciosTipoTarifas");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "ListarServiciosTipoTarifas";
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });
</script>
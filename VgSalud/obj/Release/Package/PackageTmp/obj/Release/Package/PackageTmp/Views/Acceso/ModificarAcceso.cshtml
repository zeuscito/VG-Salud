@model VgSalud.Models.E_Acceso

@{
    ViewBag.Title = "ModificarAcceso";
  
    var ListadoPerfiles = (SelectList)ViewBag.ListadoPerfiles;
    var ListadoUsuarios = (SelectList)ViewBag.ListadoUsuarios; 
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Acceso</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Modificar Acceso</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Modificar Acceso</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <input type="hidden" name="CodAcc" id="CodAcc" value="@Model.CodAcc" />



                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Perfil</label>
                            </div>
                            <div class="col-md-9">

                                @Html.DropDownList("CodPerf", ListadoPerfiles, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodPerf, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Usuario</label>
                            </div>
                            <div class="col-md-9">

                                @Html.DropDownList("CodUsu", ListadoUsuarios, "[NO SELECCIONADO]", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CodUsu, "", new { @class = "text-danger" })
                            </div>
                        </div>





                    </div>

                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger">Modificar</button>
                                    <a value="Cancelar" href="./ListarAcceso" class="btn btn-info">Cancelar</a>
                                 
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </section>
</div>


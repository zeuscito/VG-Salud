@model VgSalud.Models.E_UsuarioDocumentoSerie

@{
    ViewBag.Title = "RegistrarUsuarioDocSerie";
    var usuario = (SelectList)ViewBag.usuario;
    var serie = (SelectList)ViewBag.serie;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario Documento Serie</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario Documento Serie</a></li>
            <li class="active">Registrar Usuario Documento Serie</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">


                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="./ListaUsuarioDocSerie">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>

                </div>

                <div class="box-body">

                    <fieldset>
                        <legend style="margin-left: 29px;">Registrar</legend>
                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Usuario</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.DropDownList("CodUsu", usuario, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodUsu, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Serie</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.DropDownList("CodDocSerie", serie, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodDocSerie, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </fieldset>

                    
                    <div class="col-md-6">

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Prioridad</label>
                            </div>
                            <div class="col-md-9">

                                @Html.CheckBoxFor(model => model.Prioridad)
                                @Html.ValidationMessageFor(model => model.Prioridad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Estado</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.EstUDs, new { @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.EstUDs, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Registrar" class="btn btn-danger" style="background-color:#13D003; border:0" id="grabar">Registrar</button>                                  
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        var ALT = 18; var G = 71; var presiono1 = false;
        $(document).keydown(function (e) {

            if (e.keyCode == ALT) {
                presiono1 = true;
            }
            if (presiono1 && (e.keyCode == 123)) {
                $("#grabar").click();
            }
            else if (presiono1 == true && (e.keyCode == 67)) {
                $(location).attr("href", "../UsuarioDocumentoSerie/ListaUsuarioDocSerie");
            }
            else if (presiono1 == true && (e.keyCode == 65)) {
                window.location.href = "../UsuarioDocumentoSerie/ListaUsuarioDocSerie";
            }
        });


        $(document).keyup(function (e) {
            if (e.keyCode == G) {
                presiono2 = false;
            }
        });

    });

</script>
@model VgSalud.Models.E_Medico_TipoTarifa

@{
    ViewBag.Title = "RegistrarMedicoTipoTarifa";
    var medico = (SelectList)ViewBag.medico;
    var tipotarifa = (SelectList)ViewBag.tipotarifa; 
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Medico / Tipo Tarifa</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Medico Tipo Tarifa</a></li>
            <li class="active">Registrar Medico Tipo de Tarifa</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
       
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="./ListarMedicoTipoTarifas">
                            <center style="margin-left: 30px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 30px;">Registrar</legend>

                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Medico</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("codMed",medico, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodMed, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tipo Tarifa</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("codTipTar", tipotarifa, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodTipTar, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Porcentaje</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.porcentaje, "", new { @class = "text-danger" })
                                </div>
                            </div>



                        </div>


                        <label></label>
                        <br /><br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <br />
                                    <center>
                                        <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003; border:0" id="grabar">Registrar</button>
                               
                                    </center>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>

            </form>

        </div>
    </section>
</div>


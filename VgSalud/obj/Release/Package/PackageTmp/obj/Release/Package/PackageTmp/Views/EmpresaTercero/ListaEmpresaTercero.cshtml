@model IEnumerable<VgSalud.Models.E_Empresa_Tercero>

@{
    ViewBag.Title = "ListaEmpresaTercero";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Empresa Tercero</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Empresa Tercero</a></li>
            <li class="active">Consultar Empresa Tercero</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @{

                            var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarEmpresaTercero.cshtml");
                            if (abc1 != null)
                            {
                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                                    <br />
                                </div>

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/EmpresaTercero/RegistrarEmpresaTercero"><center><i class="fa fa-plus-circle" style="font-size:25px;color:#13D003"></i><br /><strong style="color:black">Nuevo</strong></center></a>
                                </div>
                            }

                            var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarSedesEmpresa.cshtml");
                            if (abc2 != null)
                            {
                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="../SedesEmpresa/RegistrarSedesEmpresa"><center><i class="fa fa-check-circle" style="font-size:25px;color:#13D003"></i><br /><strong style="color:black">Asignar Sedes</strong></center></a>
                                </div>
                            }

                        }

                    </div>

                 
                    <div class="box-body">
                        <fieldset>
                            <legend style="margin-left: 50px;">Lista</legend>
                            <div class="col-md-12" style="margin-left: 35px;padding-right: 85px">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">
                                            @* <th>Codigo</th>*@
                                            <th>Razón Social</th>
                                            <th>RUC</th>
                                            <th>Contacto</th>
                                            <th>Teléfono</th>
                                            <th>Correo</th>
                                            <th>Estado</th>
                                            <th style="text-align:center"><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                @* <td> @Html.DisplayFor(modelItem => item.CodEmp) </td>*@
                                                <td> @Html.DisplayFor(modelItem => item.RazonEmp)</td>
                                                <td> @Html.DisplayFor(modelItem => item.RucEmp)</td>
                                                <td> @Html.DisplayFor(modelItem => item.NomContacto)</td>
                                                <td> @Html.DisplayFor(modelItem => item.Tel1)</td>
                                                <td> @Html.DisplayFor(modelItem => item.Correo1)</td>
                                                <td> @Html.DisplayFor(modelItem => item.EstEmp) </td>
                                                <td style="text-align:center">
                                                    <div class="tools">
                                                        @{

                                                            var abc3 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarEmpresaTercero.cshtml");
                                                            if (abc3 != null)
                                                            {
                                                                <a title="Editar" href="ModificarEmpresaTercero/@item.CodEmp"><i class="fa fa-edit"></i></a>
                                                            }


                                                            var abc4 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "EliminarEmpresaTercero.cshtml");
                                                            if (abc4 != null)
                                                            {
                                                                if (item.EstEmp == true)
                                                                {
                                                                    <a title="Eliminar" href="EliminarEmpresaTercero/@item.CodEmp"><i class="fa fa-trash-o"></i></a>
                                                                }
                                                                else
                                                                {
                                                                    <a title="Activar" href="ActivarEmpresaTercero/@item.CodEmp"><i class="fa fa-angle-down"></i></a>
                                                                }
                                                            }


                                                        }

                                                    </div>
                                                </td>
                                            </tr>

                                                            }

                                    </tbody>

                                </table>
                            </div>
                 
                        </fieldset>
                      
                    </div>
                </div>
            </div>

    </section>
</div>
<div class="control-sidebar-bg">
</div>

<script>
    var ALT = 18; var N = 78; var presiono2 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono2 = true;
        }
        if (presiono2 && (e.keyCode == 116)) {
            $(location).attr("href", "RegistrarEmpresaTercero");
        }
        else if (presiono2 && (e.keyCode == 119)) {
            $(location).attr("href", "../SedesEmpresa/RegistrarSedesEmpresa");
        }
        else if (presiono2 && (e.keyCode == 112)) {
            $(location).attr("href", "../Master/Index");
        }
    });
    $(document).keyup(function (e) {

        if (e.keyCode == ALT) {
            presiono2 = false;
        }
    });
</script>



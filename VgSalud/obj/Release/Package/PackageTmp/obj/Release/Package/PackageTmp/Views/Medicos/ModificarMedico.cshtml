                        <fieldset>
                            <legend style="margin-left: 30px;">Filtro</legend>
                            <div class="col-md-12">

                                <div class="col-md-6">
                                    <label>Tipo Tarifa</label>
                                    @Html.DropDownList("codTipTar", ListaTipoTarifa, new { @class = "form-control select2" })

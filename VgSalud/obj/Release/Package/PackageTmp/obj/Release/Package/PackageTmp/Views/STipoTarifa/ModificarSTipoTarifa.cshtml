@model VgSalud.Models.E_Sub_Tipo_Tarifa

@{
    ViewBag.Title = "ModificarSTipoTarifa";
    var ListaTipoTarifa = (SelectList)ViewBag.ListadoTipoTarifa;

}





<div class="content-wrapper">
    <section class="content-header">
        <h1>Sub Tipo Tarifa</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Sub Tipo Tarifa</a></li>
            <li class="active">Modificar Sub Tipo Tarifa</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
   
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">
                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="../ListaSTipoTarifa">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 32px;">Datos a Modificar</legend>
                        <div class="col-md-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <input type="hidden" name="CodSTipTar" id="CodSTipTar" value="@Model.CodSTipTar" />


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Descripcion</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.DescSTipTar, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DescSTipTar, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tipo Tarifa</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodTipTar", ListaTipoTarifa, "Seleccione", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodTipTar, "", new { @class = "text-danger" })

                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Estado</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.EstTipTar)
                                    @Html.ValidationMessageFor(model => model.EstTipTar, "", new { @class = "text-danger" })

                                </div>
                            </div>


                        </div>


                        <label></label>
                        <div class="form-group">
                            <div class="col-md-12">
                                <br />
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003; border:0" id="grabar">Modificar</button>
                                  
                                </center>
                            </div>
                        </div>
                    </fieldset>
                </div>
             
            </form>
        </div>
    </section>
</div>

<script>

    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#grabar").click();
        }
        else if (presiono1 == true && (e.keyCode == 67)) {
            $(location).attr("href", "../ListaStipoTarifa");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "../ListaStipoTarifa";
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>
@model IEnumerable<VgSalud.Models.E_Servicios>

@{
    ViewBag.Title = "ListaServicios";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}





<div class="content-wrapper">
    <section class="content-header">
        <h1>Servicios</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Servicios</a></li>
            <li class="active">Consultar Servicios</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarServicios.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                                    <br />
                                </div>
                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="RegistrarServicios"><center><i class="fa fa-plus-circle" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Nuevo</strong></center></a>
                                </div>
                            </div>
                            <br />
                        }

                    }

                    <fieldset>
                        <legend style="margin-left: 50px;">Lista</legend>
                        <div class="col-md-12" style="margin-left: 35px;padding-right: 85px">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr class="headTabla">
                                        <th>Codigo</th>
                                        <th>Servicio</th>
                                        <th>Especialidad</th>
                                        <th>Empresa</th>
                                        <th>Sede</th>
                                        <th>Estado</th>
                                        <th><i class="fa fa-edit"></i></th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var item in Model)
                                    {

                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.CodServ)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NomServ)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Especialidad)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Empresa)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Sede)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EstServ)</td>
                                        <td>
                                            <div class="tools">
                                                @{

                                                        var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarServicios.cshtml");
                                                        if (abc2 != null)
                                                        {
                                                <a title="Editar" href="ModificarServicios/@item.CodServ"><i class="fa fa-edit"></i></a>
                                                        }

                                                }
                                            </div>
                                        </td>
                                    </tr>

                                                        }

                                </tbody>

                            </table>
                        </div>
                    </fieldset>

                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>


<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 116)) {
            $(location).attr("href", "RegistrarServicios");
        }
        else if (presiono1 && (e.keyCode == 112)) {
            $(location).attr("href", "../Master/Index");
        }
    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });
</script>
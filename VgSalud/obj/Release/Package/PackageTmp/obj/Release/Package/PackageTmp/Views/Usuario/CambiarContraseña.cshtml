        $("#passwordRepit").keyup(function () {

            var value = this.value;
            var value1 = $("#passwordNew").val();
            if (value == value1) {
                $("#modificar").attr("disabled", false);
                $("#error").hide();
            }
            else {
                $("#modificar").attr("disabled", true);
                $("#error").show();

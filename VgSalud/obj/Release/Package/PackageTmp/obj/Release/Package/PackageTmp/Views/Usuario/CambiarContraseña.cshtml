@model VgSalud.Models.E_Usuario

@{
    ViewBag.Title = "Cambiar Contraseña";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Cambiar Contraseña</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
    
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="" name="form1">
                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="../listaUsuario">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 29px;">Cambiar Contraseña</legend>
                        <div class="col-md-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" name="codUsu" value="@Model.codUsu" id="codUsu" />
                            <input type="hidden" name="aliasUsu" value="@Model.aliasUsu" id="aliasUsu" />
                            <input type="hidden" name="pwdUsu" value="@Model.pwdUsu" id="pwdUsu" />

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Contraseña Nueva</label>
                                </div>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" name="passwordNew" id="passwordNew" />

                                    @Html.ValidationMessageFor(model => model.passwordNew, "", new { @class = "text-danger" })

                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Repetir Contraseña Nueva</label>
                                </div>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" name="passwordRepit" id="passwordRepit" />
                                    <label id="error" style="display:none;color:red">Error: Ingrese la misma contraseña</label>
                                    @Html.ValidationMessageFor(model => model.passwordRepit, "", new { @class = "text-danger" })

                                </div>

                            </div>

                        </div>
                        <div class="col-md-6"></div>
                        <label></label>
                        <br /><br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <br />
                                    <center>
                                        <button type="submit" value="Modificar" style="background-color:#13D003;border:0" class="btn btn-danger" id="modificar">Modificar</button>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>

            </form>

        </div>
    </section>
</div>




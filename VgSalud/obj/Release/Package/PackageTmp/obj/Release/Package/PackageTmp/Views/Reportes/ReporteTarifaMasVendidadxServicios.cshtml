@model VgSalud.Models.E_Reporte

@{
    ViewBag.Title = "ReporteTarifaMasVendidadxServicios";
    var listadoServicio = (SelectList)ViewBag.listadoServicio;
    var listado = (List<VgSalud.Models.E_Reporte>)ViewBag.listado;
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Productos Por Servicio</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Reportes</a></li>
            <li class="active">Reportes productos por servicio</li>
        </ol>
    </section>
    <section class="content">

        <div class="box box-default">

            <div class="box-header with-border">
     
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            @using (Html.BeginForm())
            {

                   <div class="box-header">
                       <div style="float:left; padding:0% 1% 0 1%">
                           <a href="~/Master/Index"><center style="margin-left: 5px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                           <br />
                       </div>
                   </div>
            

                    <div class="box-body">
                        <fieldset>
                            <legend style="margin-left:25px;">Filtro</legend>
                            <div class="col-md-2"></div>
                            <div class="col-md-8">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="col-md-4">
                          
                                        <div class="col-md-12">
                                            <label>Servicio</label>
                                            @Html.DropDownList("CodServ", listadoServicio, "[TODOS]", new { @class = "form-control select2", @id = "Servicio", Multiple = "multiple" })
                                        </div>
                           
                                </div>
                           
                                    <div class="col-md-2">
                               
                                            <div class="col-md-12">
                                                <label>Fecha Inicio</label>
                                                <input type="text" name="FechaI" value="@ViewBag.FechaInicio" maxlength="10" class="form-control  datepicker" />
                                            </div>
                                    
                                    </div>

                                    <div class="col-md-2">
                                   
                                            <div class="col-md-12">
                                                <label>Fecha Final</label>
                                                <input type="text" name="FechaF" value="@ViewBag.FechaFinal" maxlength="10" class="form-control  datepicker" />
                                            </div>
                                   
                                    </div>
                        
                   

                                <div class="col-md-1">
                                    <div class="form-group">
                                            <input type="submit" value="Consultar"  style="background-color:#13D003; border:#13D003;margin-top: 25px;" class="btn btn-danger" />
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-1"></div>
                        </fieldset>
                   
                    </div>
 

            }

            @if (listado != null)
            {
                <h4 style="padding:0%;text-align: right;margin-right: 35px;">
                    Exportar:
                    <a href="~/Reportes/GeneraReporteTarifaMasVendidadxServicios/?id=PDF&Serv=@ViewBag.servicio&fechaI=@ViewBag.FechaInicio&fechaF=@ViewBag.FechaFinal" target="_blank"><i class="fa fa-file-pdf-o"></i></a> |
                    <a href="~/Reportes/GeneraReporteTarifaMasVendidadxServicios/?id=Excel&Serv=@ViewBag.servicio&fechaI=@ViewBag.FechaInicio&fechaF=@ViewBag.FechaFinal" target="_blank"><i class="fa fa-file-excel-o"></i></a>
                </h4>

                <div class="box-body">
                    <div class="col-md-12">
                        <table id="example3" class="table table-bordered table-striped">
                            <thead>
                                <tr class="headTabla">
                                    <th>SERVICIO</th>
                                    <th>FECHA EMI.</th>
                                    <th>PRODUCTO</th>
                                    <th>CANTIDAD</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item1 in listado)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item1.NomServ)</td>
                                        <td>@Html.DisplayFor(modelItem => item1.fechaEmision)</td>
                                        <td>@Html.DisplayFor(modelItem => item1.DescTar)</td>
                                        <td>@Html.DisplayFor(modelItem => item1.cantidad)</td>
                                        <td>@Html.DisplayFor(modelItem => item1.total)</td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                  
                </div>

            }




        </div>
        <br /><br /><br />



    </section>
    }
</div>


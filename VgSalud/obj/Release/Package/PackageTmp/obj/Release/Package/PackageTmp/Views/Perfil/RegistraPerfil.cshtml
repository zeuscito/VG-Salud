@model VgSalud.Models.E_Perfil

@{
    ViewBag.Title = "RegistraPerfil";
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Perfil</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Registrar Perfil</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Registrar Perfil</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="ListaPerfil">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>

                </div>

                <div class="box-body">


                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Descripcion</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.descPerf, new { htmlAttributes = new { @class = "form-control", @id = "DniUsu" } })
                                @Html.ValidationMessageFor(model => model.descPerf, "", new { @class = "text-danger" })
                            </div>
                        </div>

                      
                                   

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Estado</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.EstperF, new { @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.EstperF, "", new { @class = "text-danger" })
                            </div>
                        </div>




                    </div>


                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003; border:0" id="grabar">Registrar</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>

<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#grabar").click();
        }
        else if (presiono1 == true && (e.keyCode == 67)) {
            $(location).attr("href", "ListaPerfil");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "ListaPerfil";
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });
</script>


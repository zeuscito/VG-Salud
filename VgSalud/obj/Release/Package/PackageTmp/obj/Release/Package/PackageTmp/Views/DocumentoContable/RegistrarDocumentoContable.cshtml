@model VgSalud.Models.E_DocumentoContable

@{
    ViewBag.Title = "RegistrarDocumentoContable";
}




<div class="content-wrapper">
    <section class="content-header">
        <h1>Documento  Contable</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Rol</a></li>
            <li class="active">Documento Contable</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
        
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">
                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="ListarDocumentoContable">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 30px;">Registrar</legend>
                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })




                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Descripcion</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.DescCodDoc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DescCodDoc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Alias</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.AliasCodDoc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AliasCodDoc, "", new { @class = "text-danger" })
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6">



                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Estado</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.CheckBoxFor(model => model.EstCodDoc, htmlAttributes: new { @checked = true })
                                    @Html.ValidationMessageFor(model => model.EstCodDoc, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Incluye Registro de venta</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.CheckBoxFor(model => model.IncluRegVen, htmlAttributes: new { @checked = true })
                                    @Html.ValidationMessageFor(model => model.IncluRegVen, "", new { @class = "text-danger" })

                                </div>
                            </div>


                            <input type="hidden" name="Crea" value="@ViewBag.crear" />

                            <label></label>
                            <div class="form-group">
                                <div class="col-md-12">
                                 <br />
                                        <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003; border:0" id="grabar">Registrar</button>
                                
                                  
                                </div>
                            </div>
                        </div>
                    </fieldset>
                 
</div>

            </form>

        </div>
    </section>
</div>



<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#grabar").click();
        }
        else if (presiono1 == true && (e.keyCode == 67)) {
            $(location).attr("href", "../DocumentoContable/ListarDocumentoContable");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "../DocumentoContable/ListarDocumentoContable";
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>





















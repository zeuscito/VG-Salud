@model VgSalud.Models.E_Roles

@{
    ViewBag.Title = "RegistrarRoles";
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Roles</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Registrar Roles</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Registrar Roles</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-body">
                    <div class="col-md-6">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Descripcion</label>
                            </div>
                            <div class="col-md-9">

                                @Html.EditorFor(model => model.DescRoles, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DescRoles, "", new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Observacion</label>
                            </div>
                            <div class="col-md-9">

                                @Html.EditorFor(model => model.ObsRoles, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ObsRoles, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Estado</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.EstRoles, new { @checked = "checked" })
                                @Html.ValidationMessageFor(model => model.EstRoles, "", new { @class = "text-danger" })
                            </div>

                        </div>

                          

                       

                  
                    </div> 
                 
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" class="btn btn-danger" id="grabar" >Registrar</button>
                                    <a value="Cancelar" href="./ListarRoles" class="btn btn-info">Cancelar</a>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
</div>

<script>

    $(document).ready(function () {
        var ALT = 18; var G = 71; var presiono1 = false;
        $(document).keydown(function (e) {

            if (e.keyCode == ALT) {
                presiono1 = true;
            }
            if (presiono1 && (e.keyCode == G)) {
                $("#grabar").click();
            }
        });


        $(document).keyup(function (e) {

            if (e.keyCode == G) {
                presiono2 = false;
            }
        });

    });
</script>

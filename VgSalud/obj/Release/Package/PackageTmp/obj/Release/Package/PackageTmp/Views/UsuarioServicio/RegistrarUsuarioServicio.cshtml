@model VgSalud.Models.E_Usuario_Servicio

@{
    ViewBag.Title = "RegistrarUsuarioServicio";
    var listausuario =  (SelectList)ViewBag.listaUsuario;
    var listaservicio =  (SelectList)ViewBag.listaServicio;
}    

<div class="content-wrapper">
<section class="content-header">
    <h1>Usuario / Servicio</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-users"></i>Usuario Servicio</a></li>
        <li class="active">Registrar Usuario Servicio</li>
    </ol>
</section>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>

        <form method="post" action="">

            <div class="box-header">
                <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                    <a href="./ListarUsuarioServicio">
                        <center  style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                    </a>
                </div>
            </div>

            <div class="box-body">

                <fieldset>
                    <legend style="margin-left: 29px;">Registrar</legend>

                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Usuario</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodUsu", listausuario, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodUsu, "", new { @class = "text-danger" })


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Servicio</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodServ", listaservicio, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodServ, "", new { @class = "text-danger" })
                                </div>
                            </div>



                        </div>


                        <label></label>
                        <br /><br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <br />
                                    <center>
                                        <button type="submit" value="Modificar" class="btn btn-danger" style="background-color:#13D003;border:0" id="grabar">Registrar</button>
                                    </center>
                                </div>
                            </div>
                        </div>

                </fieldset>

                
            
            </div>

        </form>

    </div>
</section>
</div>

<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#grabar").click();
        }
        else if (presiono1 == true && (e.keyCode == 67)) {
            $(location).attr("href", "../UsuarioServicio/ListarUsuarioServicio");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "../UsuarioServicio/ListarUsuarioServicio";
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });
</script>
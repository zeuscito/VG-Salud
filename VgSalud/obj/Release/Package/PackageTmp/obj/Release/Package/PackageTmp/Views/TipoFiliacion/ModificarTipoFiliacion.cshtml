@model VgSalud.Models.E_Tipo_Filiacion

@{
    ViewBag.Title = "ModificarTipoFiliacion";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Tipo Filiación</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Tipo Filiación</a></li>
            <li class="active">Modificar Tipo Filiación</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="../ListaTipoFiliacion">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 31px;">Datos a Modificar</legend>

                        <div class="col-md-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="hidden" name="CodTipFil" id="CodTipFil" value="@Model.CodTipFil" />

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tipo Filiación</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.DescTipFil, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DescTipFil, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Estado</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Estado)
                                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6"></div>


                        <label></label>
                        <div class="form-group">
                            <div class="col-md-12">
                        <button type="submit" style="background-color:#13D003;border:0;margin-left: 25%;" value="Modificar" class="btn btn-danger" id="modificar">Modificar</button>
                            </div>
                        </div>
                    </fieldset>
                </div>
     
        </form>

</div>
    </section>
</div>

<script>

    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#modificar").click();
        }
        else if (presiono1 == true && (e.keyCode == 67)) {
            $(location).attr("href", "../ListaTipoFiliacion");
        }
        else if (presiono1 == true && (e.keyCode == 65)) {
            window.location.href = "../ListaTipoFiliacion";
        }
    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>

















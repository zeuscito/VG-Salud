@model IEnumerable<VgSalud.Models.E_Especialidades>

@{
    ViewBag.Title = "ListaEspecialidad";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    string CodUsu = Session["UserID"].ToString();
}



<div class="content-wrapper">
    <section class="content-header">
        <h1>Especialidades</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Especialidad</a></li>
            <li class="active">Consultar Especialidad</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistrarEspecialidad.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                                    <br />
                                </div>
                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="RegistrarEspecialidad"><center><i class="fa fa-plus-circle" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Nuevo</strong></center></a>
                                </div>

                            </div>
                            <br />
                        }

                    }
                     

                    <div class="box-body">

                        <fieldset>
                            <legend  style="margin-left: 50px;">Lista</legend>

                            <div  class="col-md-12" style="margin-left: 35px;padding-right: 85px">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">
                                            <th>Codigo</th>
                                            <th>Nombre</th>
                                            <th>Descripción</th>
                                            <th>Estado</th>
                                            <th>Especialidad General</th>
                                            <th><i class="fa fa-edit"></i></th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item in Model)
                                    {

                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.CodEspec)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NomEspec)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DescEspec)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EstEspec)</td>
                                                <td>@Html.DisplayFor(modelItem => item.General)</td>
                                                <td>
                                                    <div class="tools">
                                                        @{

                                                        var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarEspecialidad.cshtml");
                                                        if (abc2 != null)
                                                        {
                                                                <a title="Editar" href="ModificarEspecialidad?id=@item.CodEspec"><i class="fa fa-edit"></i></a>
                                                        }

                                                        }

                                                    </div>
                                                </td>
                                            </tr>

                                                        }

                                    </tbody>

                                </table>
                            </div>
                        </fieldset>

                        
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>

<script>
    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        else if ((presiono1 == true) && (e.keyCode == 116)) {
            $(location).attr("href", "RegistrarEspecialidad");
        }
        else if (presiono1 && (e.keyCode == 112)) {
            $(location).attr("href", "../Master/Index");
        }
    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>
@model VgSalud.Models.E_Datos_Generales

@{
    ViewBag.Title = "ModificarDatos";
    var listadistrito = (SelectList)ViewBag.listadistrito;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Datos Generales</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Datos Generales</a></li>
            <li class="active">Datos Generales</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="ListarDatosGenerales">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>

                </div>

                <div class="box-body">

                    <fieldset>

                        <legend style="margin-left: 29px;">Modificar</legend>

                        <div class="col-md-6">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Igv</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.EditorFor(model => model.igv, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.igv, "", new { @class = "text-danger" })

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tipo de Cambio</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.EditorFor(model => model.Tipo_Cambio, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Tipo_Cambio, "", new { @class = "text-danger" })

                                </div>

                            </div>
            
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Distrito por Defecto</label>
                                </div>
                                <div class="col-md-9">

                                    @Html.DropDownList("CodDist", listadistrito, "[NO SELECCIONADO]", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.CodDist, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Mostrar antecedentes en paciente</label>
                            </div>
                            <div class="col-md-9">

                                @Html.CheckBoxFor(model => model.MUESTRA_ANTECEDENTE)
                                @Html.ValidationMessageFor(model => model.MUESTRA_ANTECEDENTE, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Atender solo facturas pagadas</label>
                            </div>
                            <div class="col-md-9">

                                @Html.CheckBoxFor(model => model.ATENCIONESPAGADAS)
                                @Html.ValidationMessageFor(model => model.ATENCIONESPAGADAS, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Mostrar paciente en ticket?</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.MOSTRARPACIENTETICKET)
                                @Html.ValidationMessageFor(model => model.MOSTRARPACIENTETICKET, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
               
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Desea seguir realizando Atenciones Programadas ?</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.PREGXATENCIONPROGRAMADAS)
                            </div>
                            <br />
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-3">
                                <label>Desea seguir realizando Atenciones No Programadas ?</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.PREGXATENCIONNOPROGRAMADAS)
                            </div>
                            <br />
                        </div>
                        <br />
                        <div class="form-group">
                            <br />
                            <div class="col-md-3">
                                <label>Desea Generar Cuenta Automatico?</label>
                            </div>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.GENERARCUENTAAUTO)
                            </div>
                        </div>
                    </div>

                    <label></label>
                    <br /><br />
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-6">
                                <center>
                                    <button type="submit" value="Modificar" style="background-color:#13D003; border:0" class="btn btn-danger" id="Modificar">Modificar</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </section>
</div>

<script>

    var ALT = 18; var G = 71; var presiono1 = false;
    $(document).keydown(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = true;
        }
        if (presiono1 && (e.keyCode == 123)) {
            $("#Modificar").click();
        }
        else if (presiono1 && (e.keyCode == 65)) {
            $(location).attr("href", "../DatosGenerales/ListarDatosGenerales");
        }

    });

    $(document).keyup(function (e) {
        if (e.keyCode == ALT) {
            presiono1 = false;
        }
    });

</script>
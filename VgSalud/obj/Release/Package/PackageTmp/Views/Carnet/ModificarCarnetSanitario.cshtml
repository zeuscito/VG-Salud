
@model VgSalud.Models.E_Carnet_Sanitario
@{
    int TipoCarnet = (int)ViewBag.tipoCarnet;

    string Manipulador = (string)ViewBag.Manipulador;

    string Campana = (string)ViewBag.Campana;

    string FotoCarnet = (string)ViewBag.FotoCarnet;

    int IdCarnetSanidad = (int)ViewBag.IdCarnetSanidad;

    string check = "checked";

 }


<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Styles/bootstrap-filestyle-1.2.1/src/bootstrap-filestyle.min.js"></script>
</head>
<div class="content-wrapper">
    <section class="content-header">
        <h1>Carnet Sanidad </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-address-card-o"></i>Carnet Sanidad</a></li>
            <li class="active">Modificar Carnet Sanidad</li>
        </ol>
    </section>
    <section class="content" id="yaRegistro">
        <div class="box box-default">

            <div class="box-header">
                <div style="float:left; padding:0% 1% 0 1%">
                    <a href="./ListarCarnetRegistradosDia">
                        <center><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                    </a>
                </div>
            </div>

            <div class="box-header with-border" style="width:90%;margin-left:5%;">
                <h3 class="box-title" style="text-align:left">Modificar Carnet</h3>
                @*<div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>*@
            </div>

            <div class="box-body">

                <form method="post" action="~/Carnet/ModificarCarnetSanitario" enctype="multipart/form-data">
                    <div class="col-md-12">
                        <div class="col-md-5 col-md-offset-1">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Tarifa</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.DescTar, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Tipo de carnet</label>
                                    </div>
                                    
                                    <div class="col-md-9">
                                         <div class="col-xs-12 col-md-4" style="text-align:left;">
                                             <label style="font-size:120%;color:coral"><input type="radio" @if (TipoCarnet == 2) { @check; } value="2" name="TipoCarnet" style="width:16px;height:16px;"> NORMAL</label>
                                        </div>
                                        <div class="col-xs-12 col-md-6" style="text-align:left;">
                                            <label style="font-size:120%;color:coral"><input type="radio" value="1" name="TipoCarnet" @if (TipoCarnet == 1) { @check; } style="width:16px;height:16px;"> ADULTO MAYOR</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Manipulador</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label style="font-size:120%;color:coral"><input type="radio" @if (Manipulador == "SI") { @check; } value="SI" name="Manipulador" style="width:16px;height:16px;"> SI</label>
                                            </div>
                                            <div class="col-md-4">
                                                <label style="font-size:120%;color:coral"><input type="radio" @if (Manipulador == "NO") { @check; } value="NO" name="Manipulador" style="width:16px;height:16px;"> NO</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Campaña</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label style="font-size:120%;color:coral"><input type="radio" @if (Campana == "SI") { @check; } value="SI" name="Campana" style="width:16px;height:16px;"> SI</label>
                                            </div>
                                            <div class="col-md-4">
                                                <label style="font-size:120%;color:coral"><input type="radio" @if (Campana == "NO") { @check; } value="NO" name="Campana" style="width:16px;height:16px;"> NO</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Empresa</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.Empresa, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" name="EstadoCarnet" value="TRAMITE" />

                        </div>

                        <div class="col-md-4">

                            <div class="panel panel-warning" style="border:2px solid coral;height:auto;">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="col-md-6">
                                                    <table>
                                                        <tr>
                                                            <td>
                                                                <label>Seleccione Foto de Carnet</label>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <input type="file" name="FileFotoCarnetSanidad" id="FileFotoCarnetSanidad" class="filestyle img-responsive"  data-placeholder="Seleccione Foto" data-buttonText="Subir Foto" />
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1">
                                                  
                                                    <img id="imgSalida" width="100%" height="100%" src="..@FotoCarnet" class="img-bordered img-responsive" name="imgSalida" />
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>
                    <div class="col-md-12" style="margin-top:2%;">
                        <center>
                            <button type="submit" class="btn btn-info" style="font-size:large"><span class="fa fa-pencil-square-o"></span> Modificar</button>
                        </center>
                    </div>
                    <input type="hidden" value="@IdCarnetSanidad" name="IdCarnetSanidad" id="IdCarnetSanidad"/>
                </form>
            </div>




        </div>


    </section>
</div>

<script type="text/javascript" language="javascript">
    $(window).load(function () {
        $(function () {
            debugger;
            $('#FileFotoCarnetSanidad').change(function (e) {

                addImage(e);

            });

            function addImage(e) {
                debugger;
                var file = e.target.files[0],
                imageType = /image.*/;

                if (!file.type.match(imageType))
                    return;

                var reader = new FileReader();
                reader.onload = fileOnload;
                reader.readAsDataURL(file);
            }

            function fileOnload(e) {
                debugger;
                var result = e.target.result;
                $('#imgSalida').attr("src", result);
            }
        });

    });
</script>


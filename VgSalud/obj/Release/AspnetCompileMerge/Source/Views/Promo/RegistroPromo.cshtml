@model VgSalud.Models.E_Promo
@{
    ViewBag.Title = "RegistroPromo";
    var carrito = (List<VgSalud.Models.E_Promo>)ViewBag.carrito; 
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Datos de Promocion</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Promo</a></li>
            <li class="active">Datos de Paquetes</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <div class="box-header" style="margin-left:1%; width:96%">
          
                <div style="float:left; padding:0% 1% 0 1%">
                    <a href="Modificar?id=@Model.IdPC">
                        <center><i class="fa fa-edit" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Editar</strong></center>
                    </a>
                </div>
                <div style="float:left; padding:0% 1% 0 1%">
                    <a href="ListarPromociones">
                        <center><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                    </a>
                </div>
            </div>
            <form method="post" action="" id="formulario">

               


                <div class="box-body">

                    <div class="col-md-6">

                        <fieldset>
                            <legend style="margin-left:3%; width:96%">Detalles</legend>
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-12">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="col-md-5" style="padding-right:0px;padding-left:0px">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Descripcion</label>
                                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" , @disabled="disabled"} })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-5" style="padding-right:0px;padding-left:0px">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Especialidad</label>
                                         <input type="text" class="form-control" disabled value="@Model.DescEsp" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2"></div>

                            </div>
                        </fieldset>
                  
                    </div>

                    <div class="col-md-6">
                        <fieldset>
                            <legend style="margin-left:2%; width:96%">Lista</legend>
                            <div class="box-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">

                                            <th style="text-align:center;width:5px">Codigo</th>
                                            <th style="width:160px">Tarifa</th>
                                            <th style="text-align:center;width:5px">Cantidad</th>
                                            <th style="text-align:center;width:5px">Precio</th>
                                            <th style="text-align:center;width:10px">Importe</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (carrito != null)
                                            {
                                                foreach (var item in carrito)
                                                {

                                                    <tr>
                                                        <td style="text-align:center;width:5px">@Html.DisplayFor(modelItem => item.CodTar)</td>
                                                        <td style="width:160px">@Html.DisplayFor(modelItem => item.DescTar)</td>
                                                        <td style="text-align:center;width:5px">@Html.DisplayFor(modelItem => item.cantidad)</td>
                                                        <td style="text-align:center;width:10px">
                                                            @Html.DisplayFor(modelItem => item.Precio)
                                                        </td>
                                                        <td style="text-align:center;width:10px">
                                                            @Html.DisplayFor(modelItem => item.TotalD)
                                                        </td>
                                                    </tr>

                                                }
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </fieldset>
                    </div>

                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="col-md-12">
                                <div class="col-md-6"></div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                    <div class="col-md-4">
                                        <h3>Total</h3>
                                    </div>
                                    <div class="col-md-8">
                                        <h3>S/ @ViewBag.subtotal</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                <center>
                                    <button type="submit" class="btn btn-danger" id="grabar">Registrar</button>

                                </center>
                            </div>
                        </div>
                    </div>*@
                </div>

                <input type="hidden" name="Evento" class="evento" />
                <input type="hidden" name="TotalC" value="@ViewBag.subtotal" />
            </form>
        </div>

    </section>

</div>


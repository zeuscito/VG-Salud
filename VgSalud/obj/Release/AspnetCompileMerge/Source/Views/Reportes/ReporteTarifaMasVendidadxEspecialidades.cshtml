@model VgSalud.Models.E_Reporte

@{
    ViewBag.Title = "ReporteTarifaMasVendidadxEspecialidad";
    var listadoEspecialidad = (SelectList)ViewBag.listadoEspecialidad;
    var listado = (List<VgSalud.Models.E_Reporte>)ViewBag.listado;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Productos mas vendidas por Especialidad</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Reportes</a></li>
            <li class="active">productos mas vendidas por especialidades</li>
        </ol>
    </section>
    <section class="content">

        <div class="box box-default">

            <div class="box-header with-border">
         
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            @using (Html.BeginForm())
            {

                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%;margin-left: 40px;">
                        <a href="~/Master/Index"><center><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                        <br />
                    </div>
                </div>

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left:3%; width:96%">Filtro</legend>
                        <div class="col-md-12">
                            <div class="col-md-1"></div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Especialidad</label>
                                        @Html.DropDownList("CodEspec", listadoEspecialidad, "[TODOS]", new { @class = "form-control select2", @id = "Servicio", Multiple = "multiple" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Fecha Inicio</label>
                                        <input type="text" name="FechaI" value="@ViewBag.FechaInicio" maxlength="10" class="form-control  datepicker" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Fecha Final</label>
                                        <input type="text" name="FechaF" value="@ViewBag.FechaFinal" maxlength="10" class="form-control  datepicker" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <center>
                                        <input  style="background-color:#13D003; border:#13D003;margin-top: 25px;"  type="submit" value="Consultar" class="btn btn-danger" />
                                    </center>
                                </div>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                    </fieldset>

                </div>


            }

            <br />


            @if (listado != null)
            {
                <div class="col-md-12">
                    <div class="col-md-10">

                    </div>

                    <div class="col-md-2">
                        <h4 style="padding:0%;padding-left: 70px;">
                            Exportar:
                            <a href="~/Reportes/GeneraReporteTarifaMasVendidadxEspecialidad/?id=PDF&Espc=@ViewBag.espcialidad&fechaI=@ViewBag.FechaInicio&fechaF=@ViewBag.FechaFinal" target="_blank"><i class="fa fa-file-pdf-o"></i></a> |
                            <a href="~/Reportes/GeneraReporteTarifaMasVendidadxEspecialidad/?id=Excel&Espc=@ViewBag.espcialidad&fechaI=@ViewBag.FechaInicio&fechaF=@ViewBag.FechaFinal" target="_blank"><i class="fa fa-file-excel-o"></i></a>
                        </h4>
                    </div>
                </div>
         

              
                    <div class="box-body">
                        <div class="col-md-12" style="padding-right: 60px;padding-left: 50px;">
                            <fieldset>
                                <legend style="margin-left:0%; width:96%">Lista</legend>
                                <table id="example3" class="table table-bordered table-striped">
                                    <thead>
                                        <tr class="headTabla">
                                            <th>ESPECIALIDAD</th>
                                            <th>FECHA EMI.</th>
                                            <th>PRODUCTO</th>
                                            <th>CANTIDAD</th>
                                            <th>TOTAL</th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach (var item1 in listado)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item1.NomEspec)</td>
                                                <td>@Html.DisplayFor(modelItem => item1.fechaEmision)</td>
                                                <td>@Html.DisplayFor(modelItem => item1.DescTar)</td>
                                                <td>@Html.DisplayFor(modelItem => item1.cantidad)</td>
                                                <td>@Html.DisplayFor(modelItem => item1.total)</td>
                                            </tr>

                                        }

                                    </tbody>

                                </table>
                            </fieldset>
                        </div>
                </div>
       

            }

        </div>
        <br /><br /><br />



    </section>
</div>
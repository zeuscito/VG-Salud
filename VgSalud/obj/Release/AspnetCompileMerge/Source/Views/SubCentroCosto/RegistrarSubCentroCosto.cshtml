@model VgSalud.Models.E_Sub_Centro_Costo

@{
    ViewBag.Title = "RegistrarSubCentroCosto";
    var lista = (List<VgSalud.Models.E_Sub_Centro_Costo>)ViewBag.lista;
    var centroc = (SelectList)ViewBag.centrocosto;
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>Sub Centro de Costo</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Sub Centro Costo</a></li>
            <li class="active">Registrar Sub Centro de Costo</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <div class="box-header">

                <div style="float:left; padding:0% 1% 0 1%">
                    <a href="~/Master/Index"><center style="margin-left:30px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                    <br />
                </div>
            </div>


            <div class="box-body">

                <fieldset>
                    <legend style="margin-left: 50px;">Registrar</legend>
                   
                        <form method="post" action="">
                            @if (Model != null)
                            {
                                <input type="hidden" name="IdScc" value="@Model.IdScc" />
                            }
                            <div class="row">


                                <div class="col-md-12">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-12" style="margin-left: 36px;">
                                                <label>Descripcion</label>
                                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @id = "Descripcion" } })
                                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

                                            </div>

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <label>Centro Costo</label>
                                                    @Html.DropDownList("Idcc", centroc, "[NO SELECCIONADO]", new { @class = "form-control select2", @id = "centro" })
                                                    @Html.ValidationMessageFor(model => model.Idcc, "", new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>

                                    </div>



                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-offset-1">
                                            <center>
                                                <input type="hidden" name="Evento" id="Evento" />
                                                <button type="submit" id="@ViewBag.boton" style="background-color:#13D003; border:0" class="btn btn-danger">@ViewBag.boton</button>
                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                        
                        

</fieldset>

                

                <br /><br />

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 50px;">Lista</legend>
                        <div class="col-md-12" style="margin-left: 35px;padding-right: 85px" >
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Codigo Sub Centro Costo</th>
                                        <th>Centro Costo</th>
                                        <th>Descripcion</th>
                                        <th>Estado</th>
                                        <th style="text-align: center;"><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lista != null)
                                    {
                                        foreach (var item in lista)
                                        {

                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.IdScc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Idcc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Estado)</td>

                                                <td style="text-align: center;">
                                                    <form action="" method="post">
                                                        <input type="hidden" name="Evento" class="Evento" />
                                                        <input type="hidden" name="IdScc" class="" value="@item.IdScc" />
                                                        <input type="hidden" name="Idcc" value="@item.Idcc" />
                                                        <button class="btn btn-danger editar"><i class="fa fa-edit"></i></button>
                                                        @if (item.Estado)
                                                        {

                                                            <button class="btn btn-danger eliminar"><i class="fa fa-trash-o"></i></button>

                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-danger activar"><i class="fa fa-plus-square"></i></button>

                                                        }
                                                    </form>
                                                </td>

                                            </tr>
                                        }

                                    }


                                </tbody>

                            </table>
                        </div>
                    </fieldset>
                </div>

                @*<div class="box-header">
                    <h3 class="box-title">Lista de Centro de Costos</h3>
                </div>*@
                


            </div>

        </div>
    </section>
</div>


<script>
    $(document).ready(function () {
      
       $('#centro option[value="@ViewBag.select"]').attr('selected', true);

        $("#Registrar").click(function () {
            $("#Evento").val("1");

        });
        $("#Modificar").click(function () {
            $("#Evento").val("2");

        });
        $(".eliminar").click(function () {
            $(".Evento").val("3");
        });
        $(".activar").click(function () {
            $(".Evento").val("4");
        });
        $(".editar").click(function () {
            $(".Evento").val("5");
        });
    });



    $(document).ready(function () {
        var ALT = 18; var G = 71; var presiono1 = false;
        $(document).keydown(function (e) {

            if (e.keyCode == ALT) {
                presiono1 = true;
            }
            if (presiono1 && (e.keyCode == G)) {
                $("#Registrar").click();
            }
            else if (presiono1 && (e.keyCode == 112)) {
                $(location).attr("href", "../Master/Index");
            }

        });

        $(document).keyup(function (e) {

            if (e.keyCode == G) {
                presiono2 = false;
            }
        });

    });

</script>
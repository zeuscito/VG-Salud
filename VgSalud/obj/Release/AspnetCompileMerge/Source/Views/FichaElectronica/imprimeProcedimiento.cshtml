
@{
    Layout = null;
    ViewBag.Title = "imprimeProcedimiento";
    var listaFe = (List<VgSalud.Models.E_Ficha_Electronica>)ViewBag.listaFe;
    var listaReceta = (List<VgSalud.Models.E_Ficha_Electronica>)ViewBag.listaReceta;
    var listaDiagnostico = (List<VgSalud.Models.E_Ficha_Electronica>)ViewBag.listaDiagnostico;
}

<html>
<head>
    <title> </title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style type="text/css">
        body, td, th {
            font-size: 8px;
            font-family: Gotham, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

        table {
            border-collapse: collapse;
        }

        th {
            -webkit-print-color-adjust: exact;
            background-color: #0099FF;
            color: #006;
        }

        .Tit1 {
            font-style: italic;
            font-variant: small-caps;
            font-weight: bolder;
            color: #006;
        }
    </style>
    <script>

        function redireccionarPagina() {
            window.location = "../BandejaDeAtenciones";
        }
        setTimeout("redireccionarPagina()", 1000);
    </script>

</head>
<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" onload="window.print()">

    @foreach (var fe in listaFe)
    {
        <table width="100%" border="0" cellpadding="1" cellspacing="0">
            <tr>
                <th height="20" colspan="5" align="center">FILIACION</th>
            </tr>
            <tr>
                <td height="20" colspan="3" align="left"><span class="Tit1">Paciente :</span> @fe.Nombre</td>
                <td width="10%" align="right" class="Tit1">N&deg; Historia :</td>
                <td width="15%">@fe.Historia</td>
            </tr>
            <tr>
                <td width="25%" height="20"><span class="Tit1">Sexo :</span> @fe.sexo</td>
                <td width="25%"><span class="Tit1">Edad :</span> @fe.edad A&Ntilde;OS</td>
                <td width="25%"><span class="Tit1">DNI: </span>@fe.numDoc</td>
                <td align="right" class="Tit1">Cuenta / Item :</td>
                <td>@fe.CodCue / @fe.Item</td>
            </tr>
            <tr>
                <td height="20"><span class="Tit1">Fecha / Hora :</span> @fe.FecRegMed 5:33 P.M.</td>
                <td colspan="4"><span class="Tit1">Atenci&oacute;n : </span>@fe.DescTar</td>
            </tr>
        </table>
        <br>

        <table width="100%" border="1" cellspacing="0" cellpadding="1">
            <tr>
                <th height="20" colspan="5" align="center">PROCEDIMIENTO</th>
            </tr>
            <tr>
                <td width="12%" height="20"><span class="Tit1">FC : </span>@fe.FC LPM</td>
                <td width="12%"><span class="Tit1">FR : </span>@fe.FR RPM</td>
                <td width="12%"><span class="Tit1">PA :</span> @fe.PA MMhG</td>
                <td width="14%"><span class="Tit1">T&deg; Axilar :</span> @fe.Tax &deg;c</td>
                <td class="Tit1">T&deg; @fe.Tanal :</td>
            </tr>
            <tr>
                <td height="650" colspan="5" valign="top">@(new HtmlString(fe.DescripcionProc))</td>
            </tr>
        </table>
        <br>

    }


    <table width="100%%" border="1" cellspacing="0" cellpadding="1">
        <tr>
            <th width="30%" height="20" bgcolor="#0099FF">IMPRESION DIAGNOSTICA</th>
            <th width="55%" bgcolor="#0099FF">TRATAMIENTO</th>
            <th width="15%" bgcolor="#0099FF">PROX. PROCED.</th>
        </tr>
        <tr>
            <td height="140" rowspan="3" valign="top">
                @foreach (var fe in listaDiagnostico)
                {
                    var demo = fe.Item + ".- " + fe.CIe10 + " " + fe.Descripcion;
                    @demo <br />
                }
            </td>
            <td height="20" align="center" valign="top"><strong>Medicamento / Forma Farmaceu. / Conecntración. / Dosis / Frecuencia / Vía / Duración / Observaciones</strong></td>
            <td align="center" valign="top">@ViewBag.proxCita</td>
        </tr>
        <tr>
            <td height="35" rowspan="2" valign="top">
                @foreach (var fe in listaReceta)
                {
                    var demo = fe.Item + ".- " + fe.DesFromFar + " / " + fe.Concentra + " / " + fe.Dosis + " / " + fe.DesFre + " / " + fe.ViaAdmin + " / " + fe.Duracion + " / " + fe.Observ;
                    @demo <br />
                }
            </td>
            <th height="20" bgcolor="#0099FF">INTERCONSULTA :</th>
        </tr>
        <tr>
            <td height="30" align="center" valign="middle">@ViewBag.InterCon </td>
        </tr>
    </table>
    <br>
    <br>
    <table width="100%" border="0" cellspacing="0" cellpadding="1">
        <tr>
            <td width="75%" height="60" align="center">&nbsp;</td>
            <td width="25%" align="center" valign="bottom" class="Tit1">
                <p style="border-top:1px #000 solid; padding-top:10px">
                    @ViewBag.abrev @ViewBag.medico<br>
                    SERVICIO DE @ViewBag.servicio
                </p>
            </td>
        </tr>
    </table>

    <br />
    <small>Historia: @ViewBag.historiaPac</small>

    </div>
</body>
</html>



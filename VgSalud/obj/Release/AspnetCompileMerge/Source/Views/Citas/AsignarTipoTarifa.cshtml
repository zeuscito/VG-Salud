@model VgSalud.Models.E_Tipo_Tarifa

@{
    ViewBag.Title = "AsignarTipoTarifa";
    var listadoTipoTarifa = (SelectList)ViewBag.listadoTipoTarifa;
    var listaTarifa = (List<VgSalud.Models.E_Tipo_Tarifa>)ViewBag.listaTarifa;
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Asignar Tipo Tarifa</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Tipo Tarifa</a></li>
            <li class="active">Asignar Tipo Tarifa</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                @*<h3 class="box-title">Asignar Tipo Tarifa</h3>*@
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">

                    <div style="float:left; padding:0% 1% 0 1%">
                        <a href="~/Master/Index"><center style="margin-left:25px;"><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                        <br />
                    </div>

                </div>

                <div class="box-body">

                    <fieldset>
                        <legend style="margin-left:29px">Asignar</legend>

                        <div class="col-md-4">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tipos de tarifas</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.DropDownList("CodTipTar", listadoTipoTarifa, "[SELECCIONE UN TIPO DE TARIFA]", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CodTipTar, "", new { @class = "text-danger" })
                                </div>
                            </div>


                        </div>

                        <div class="col-md-6" style="margin-left: 29px;">

                            <div class="col-md-3">
                                <center>
                                    <input type="submit"  id="grabar" value="Registrar"  class="btn btn-danger" style="background-color:#13D003; border:0;" />
                                </center>
                            </div>

                        </div>
                        
                        @if (listaTarifa.Count() != 0)
                       {
                            <div class="box-body" style="margin-top:5%;">
                                
                                <div class="col-md-12" style="padding-left:28px;padding-right:28px">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Codigo</th>
                                                <th>Descripcion</th>
                                                <th><i class="fa fa-trash-o"></i></th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            @foreach (var item in listaTarifa)
                                            {

                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.CodTipTar)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.DescTipTar)</td>

                                                    <td>
                                                        <div class="tools">
                                                            <a href="EliminarTipoTarifa/@item.CodTipTar"><i class="fa fa-trash-o"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>

                                            }

                                        </tbody>

                                    </table>
                                </div>
                  

                            </div>

                        }

                    </fieldset>                                               

                </div>
            </form>



        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        var ALT = 18; var G = 71; var presiono1 = false;
        $(document).keydown(function (e) {

            if (e.keyCode == ALT) {
                presiono1 = true;
            }
            if (presiono1 && (e.keyCode == 123)) {
                $("#grabar").click();
            }
            else if (presiono1 == true && (e.keyCode == 65)) {
                window.location.href = "./ConsultaCita";
            }

        });


        $(document).keyup(function (e) {

            if (e.keyCode == G) {
                presiono2 = false;
            }
        });

    });

</script>
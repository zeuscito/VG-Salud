@model IEnumerable<VgSalud.Models.E_Usuario>

@{
    ViewBag.Title = "listaUsuario";
    VgSalud.Controllers.AccesoController ac = new VgSalud.Controllers.AccesoController();
    VgSalud.Controllers.DatosGeneralesController DG = new VgSalud.Controllers.DatosGeneralesController();

    string CodUsu = Session["UserID"].ToString();

}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Usuario</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Consultar Usuario</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    @{

                        var abc1 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "RegistraUsuario.cshtml");
                        if (abc1 != null)
                        {
                            <div class="box-header">
                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Master/Index"><center><i class="fa fa-home" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Home</strong></center></a>
                                    <br />
                                </div>

                                <div style="float:left; padding:0% 1% 0 1%">
                                    <a href="~/Usuario/RegistraUsuario"><center><i class="fa fa-plus-circle" style="font-size:25px; color:#13D003"></i><br /><strong style="color:black">Nuevo</strong></center></a>
                                </div>
                                
                            </div>
                            <br />
                        }

                    }
                   
                    
                    <div class="box-body">
                        <div class="col-md-12">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr class="headTabla">
                                        <th>Codigo Usuario</th>
                                        <th>Alias</th>
                                        <th>Dni</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>
                                        <th>Nombre Usuario</th>
                                        <th>Fecha de Nacimiento</th>
                                        <th>Estado Usuario</th>
                                        <th><i class="fa fa-edit"></i> / <i class="fa fa-trash-o"></i></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        
                                        <tr>

                                            <td>@Html.DisplayFor(modelItem => item.codUsu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.aliasUsu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DniUsu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ApePaterUsu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ApeMaterUsu)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NomUsu)</td>
                                            <td>@item.FecNacUsu.ToShortDateString()</td>
                                            <td>@Html.DisplayFor(modelItem => item.EstUsu)</td>


                                            <td>
                                                <div class="tools">
                                                    @{

                                                        var abc2 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "ModificarUsuario.cshtml");
                                                        if (abc2 != null)
                                                        {
                                                            <a title="Editar" href="ModificarUsuario/@item.codUsu"><i class="fa fa-edit"></i></a>
                                                        }

                                                        var abc3 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "EliminarUsuario.cshtml");
                                                        if (abc3 != null)
                                                        {
                                                            if (item.EstUsu == true)
                                                            {
                                                                <a title="Eliminar" href="eliminar/@item.codUsu"><i class="fa fa-trash-o"></i></a>
                                                            }
                                                            else
                                                            {
                                                                <a title="Activar" href="Activar/@item.codUsu"><i class="fa fa-plus-square"></i></a>
                                                            }
                                                        }
                                                        var abc4 = ac.ListaFormulariGeneral(CodUsu).Find(x => x.nomForm == "CambiarContraseña.cshtml");
                                                        if (abc4 != null)
                                                        {
                                                            <a title="Cambiar Contraseña" href="CambiarContraseña/@item.codUsu"><i class="fa fa-key"></i></a>
                                                        }

                                                        if (DG.getUser(item.codUsu))
                                                        {
                                                            <a title="Editar" href="~/DatosGenerales/PermisosAdmin"><i class="fa fa-lock"></i></a>
                                                        }

                                                    }

                                                </div>
                                            </td>
                                        </tr>

                                                        }

                                </tbody>

                            </table>
                        </div>

                     

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="control-sidebar-bg">
</div>



<script>

    $(document).on("ready", function () {
        var ALT = 18; var N = 78; var presiono2 = false;
        $(document).keydown(function (e) {
            if (e.keyCode == ALT) {
                presiono2 = true;
            }
            if (presiono2 && (e.keyCode == 116)) {
                $(location).attr("href", "RegistraUsuario");
            }
            else if (presiono2 && (e.keyCode == 112)) {
                $(location).attr("href", "../Master/Index");
            }
        });

        $(document).keyup(function (e) {

            if (e.keyCode == ALT) {
                presiono2 = false;
            }
        });
    });

</script>

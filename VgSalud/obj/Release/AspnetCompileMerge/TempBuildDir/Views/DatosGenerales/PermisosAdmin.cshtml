@model VgSalud.Models.E_Datos_Generales
@{
    ViewBag.Title = "PermisosAdmin";
    var lista = (List<VgSalud.Models.E_Datos_Generales>)ViewBag.lista;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Licencia
        
        
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Usuario</a></li>
            <li class="active">Licencia</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            <form method="post" action="">

                <div class="box-header">
                    <div style="float:left; padding:0% 1% 0 1%" title="ALT + A">
                        <a href="../Usuario/ListaUsuario">
                            <center style="margin-left: 15px;"><i class="fa fa-arrow-circle-left" style="font-size:25px; color:#13D003"></i><br><strong style="color:black">Atras</strong></center>
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <fieldset>
                        <legend style="margin-left: 30px;">Registrar Permisos de Licencias</legend>
                  
                        <div class="col-md-6">
                            <div class="col-md-3">
                                <label>Fecha</label>
                                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control datepicker", @value = "" } })
                            </div>
                            <div class="col-md-3">
                                <label>Cant. de Sedes</label>
                                @Html.EditorFor(model =>model.sedes, new { htmlAttributes = new { @class = "form-control", @value = "" } })
                            </div>
                            <div class="col-md-3">
                                <label>Cant. de Servicios</label>
                                @Html.EditorFor(model => model.servicio, new { htmlAttributes = new { @class = "form-control", @value = "" } })
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <center>
                                            <br />
                                            <button type="submit" value="" class="btn btn-danger" style="background-color:#13D003;border:0;margin-top: 5px;" id="grabar">Actualizar</button>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <table id="" class="table table-bordered table-condensed table-hover table-responsive">
                                <tr class="headTabla">
                                    <th>Fecha de Caducidad</th>
                                    <th>Cant. Sedes</th>
                                    <th>Cant. Servicios</th>
                                </tr>
                                @if (lista != null)
                                {
                                    foreach (var item in lista)
                                    {
                                        <tr>
                                            <td>@item.fecha</td>
                                            <td>@item.sedes</td>
                                            <td>@item.servicio</td>
                                        </tr>

                                    }
                                }
   
                     
                            </table>
                        </div>
           
                        <br /><br />

                

                    </fieldset>
                </div>

            </form>

        </div>
    </section>
</div>


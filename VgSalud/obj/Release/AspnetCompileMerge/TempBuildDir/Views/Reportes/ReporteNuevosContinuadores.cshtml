
@{
    ViewBag.Title = "ReporteNuevosContinuadores";
    var lista = (List<VgSalud.Models.E_Reporte>)ViewBag.lista;
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Reportes</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-users"></i>Reportes</a></li>
            <li class="active">Reportes de Nuevos Continuadores</li>
        </ol>
    </section>
    <section class="content">

        <div class="box box-default">

            <div class="box-header with-border">
                <h3 class="box-title"> Reporte de Nuevos Continuadores</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>

            @using (Html.BeginForm())
            {

                <fieldset>
                    <div class="box-body">
                        <div class="col-md-12">
                            <form action="" method="post">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-3"></div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Fecha Final</label>
                                            <input type="text" name="FechaI" value="@ViewBag.fechaI" maxlength="10" class="form-control  datepicker" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">

                                        <div class="col-md-12">
                                            <label>Fecha Final</label>
                                            <input type="text" name="FechaF" value="@ViewBag.fechaF" maxlength="10" class="form-control  datepicker" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <br />
                                    <button type="submit" style="padding:8px 14px" class="btn btn-danger" name="accion" value="1"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                                <div class="col-md-1"></div>
                            </form>

                        </div>
                    </div>
                </fieldset>
            }
            <br /><br /><br />
            <div class="box-body">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    @if (lista != null)
                    {
                        <h4 style="padding:2%">
                            Exportar:
                            <a href="~/Reportes/GeneraReporteNuevosContinuadores/?id=PDF&FechaI=@ViewBag.fechaI&FechaF=@ViewBag.fechaF" target="_blank"><i class="fa fa-file-pdf-o"></i></a> |
                            <a href="~/Reportes/GeneraReporteNuevosContinuadores/?id=Word&FechaI=@ViewBag.fechaI&FechaF=@ViewBag.fechaF" target="_blank"><i class="fa fa-file-word-o"></i></a> |
                            <a href="~/Reportes/GeneraReporteNuevosContinuadores/?id=Excel&FechaI=@ViewBag.fechaI&FechaF=@ViewBag.fechaF" target="_blank"><i class="fa fa-file-excel-o"></i></a>
                        </h4>

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr class="headTabla">
                                    <th style="text-align:center">Fecha</th>
                                    <th style="text-align:center">N° Pac. Registrados</th>
                                    <th style="text-align:center">N° Pac. Atendidos</th>
                                    <th style="text-align:center">Total</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in lista)
                                {
                                    <tr>
                                        <td style="text-align:center">@item.fecha</td>
                                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.PacAtendidos)</td>
                                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.TotAtendido)</td>
                                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.totalpac)</td>
                                    </tr>

                                }

                            </tbody>

                        </table>

                       
                    }
                </div>
                <div class="col-md-2"></div>
            </div>

        </div>
        <br /><br /><br />



    </section>

</div>

